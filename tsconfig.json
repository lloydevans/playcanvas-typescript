{
  "compilerOptions": {
    "noImplicitAny": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitReturns": false,
    "noUnusedParameters": false,
    "removeComments": false,
    "strictFunctionTypes": true,
    "strictNullChecks": false,
    "moduleResolution": "node",
    "lib": ["ES7", "DOM"],
    "target": "ES5",
    "module": "None",
    "outDir": "./build",
    "outFile": "./build/pc-scripts.js",
    "rootDir": "./src",
    "sourceMap": false,
    "declaration": false
  },

  "include": [
    "node_modules/playcanvas/build/output/playcanvas.d.ts",
    "types/custom.d.ts",
    "src"
  ]
}
